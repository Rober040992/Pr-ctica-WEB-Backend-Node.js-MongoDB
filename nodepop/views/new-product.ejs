<%- include('header.ejs') %>

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-5 shadow-lg" style="max-width: 500px; width: 100%;">
    <h1 class="text-center mb-4 text-success">Crea un Producto</h1>

    <form method="POST" enctype="multipart/form-data">   <!-- este enctypr es el formato para la subida de files con multer -->
      <!-- Campo para el nombre del producto -->
      <div class="mb-3">
        <label for="productName" class="form-label">Nombre del Producto</label>
        <input
          type="text"
          name="name"
          class="form-control"
          id="productName"
          placeholder="Nombre del producto"
          required
        >
      </div>

      <!-- Campo para el precio del producto -->
      <div class="mb-3">
        <label for="productPrice" class="form-label">Precio</label>
        <input
          type="number"
          name="price"
          class="form-control"
          id="productPrice"
          placeholder="Ingrese el precio"
          required
        >
      </div>
               
      <!-- Campo para el upload del file/imagen -->
      <div class="mb-3">
        <label for="customFile" class="form-label">Image</label>
        <input
          type="file"
          name="Image"
          class="form-control"
          id="customFile"
        >
      </div>

      <!-- Selección de tags válidos con checkboxes -->
      <div class="mb-3">
        <label class="form-label">Seleccione uno o varios Tags</label>
        <div>
          <label><input type="checkbox" name="tags" value="work"> Work</label>
          <label><input type="checkbox" name="tags" value="lifestyle"> Lifestyle</label>
          <label><input type="checkbox" name="tags" value="motor"> Motor</label>
          <label><input type="checkbox" name="tags" value="mobile"> Mobile</label>
        </div>
      </div>

      <button type="submit" class="btn btn-primary w-100 mt-3">Crear Producto</button>
    </form>
  </div>
</div>

<%- include('footer.ejs') %>
